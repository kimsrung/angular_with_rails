  <div ng-controller='myCtrl'>
    <div class="page-header">
      <h1 class="text-center">{{pageTitle}}</h1>
      <button class="btn btn-default" ng-click="isForm=true;isEdit=false;isNew=true;pageTitle='New Movie'">New Movie</button>
    </div>
    <table class="table table-striped" ng-show="!isForm">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Average Rating</th>
          <th>Release Year</th>
          <th>URL</th>
          <th>Rating</th>
          <th>Edit</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="movie in movies">
          <td>{{movie.id}}</td>
          <td>{{movie.name}}</td>
          <td>{{movie.average_rating}}</td>
          <td>{{movie.release_year}}</td>
          <td>{{movie.url}}</td>
          <td>{{movie.rating}}</td>
          <td>
            <button type="button" class="btn btn-primary" ng-click="editMovie(movie)">Edit</button>
            <button type="button" class="btn btn-danger" ng-click="deleteMovie(movie)">Delete</button>
          </td>
        </tr>
      </tbody>
    </table>
    <hr >
    <div class="form-new" ng-show="isForm">
      <form name='form' class="form-horizontal">
        <div class="form-group">
          <label class="col-sm-2 control-label">Name</label>
          <div class="col-sm-6">
            <input type="text" class="form-control" ng-model="movie.name" placeholder="Name">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">Average Rating</label>
          <div class="col-sm-6">
            <input type="text" class="form-control" ng-model="movie.average_rating" placeholder="Average Rating">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">Release Year</label>
          <div class="col-sm-6">
            <input type="number" class="form-control" ng-model="movie.release_year" placeholder="Release Year">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">URL</label>
          <div class="col-sm-6">
            <input type="text" class="form-control" ng-model="movie.url" placeholder="URL">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">Rating</label>
          <div class="col-sm-6">
            <input type="text" class="form-control" ng-model="movie.rating" placeholder="Rating">
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button ng-show='isNew' type="submit" class="btn btn-primary" ng-click="createNewMovie()">Create</button>
            <button ng-show='isEdit' type="submit" class="btn btn-primary" ng-click="updateMovie()">Update</button>
            <button type="button" class="btn btn-default" ng-click="isForm=false">Cancel</button>
          </div>
        </div>
      </form>
    </div>
  </div>

